
# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('libnx')
pkgver=1.3.1
pkgrel=1
pkgdesc="Nintendo Switch AArch64-only userland library."
arch=('any')
license=('custom')
url="http://github.com/switchbrew"
options=(!strip libtool staticlibs)
source=(${url}/${pkgname}/releases/download/v${pkgver}/${pkgname}-src-${pkgver}.tar.bz2)
sha256sums=('7a46aaee77e56ee644d83eb873a8c8c5403d92345b9b50ebb342706d5d5bab67')
makedepends=('devkitA64')

groups=('switch-dev')

build() {

  make -C $srcdir

}

package() {

  make -C $srcdir DESTDIR=$pkgdir install

}

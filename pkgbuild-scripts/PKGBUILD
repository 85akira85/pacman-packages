'devkitarm.sh' 'devkitarm.cmake' '3dsvars.sh'
'devkitppc.sh' 'devkitppc.cmake' 'ppcvars.sh'
'devkita64.sh' 'devkita64.cmake' 'switchvars.sh'

)


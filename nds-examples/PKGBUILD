
# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('nds-examples')
pkgver=20200510
pkgrel=1
pkgdesc="Nintendo NDS example code."
arch=('any')
license=('custom')
url="http://github.com/devkitpro/${pkgname}"
options=(!strip libtool staticlibs)
source=(${url}/archive/${pkgname}-${pkgver}.tar.gz)
sha256sums=('3ff9077e6cffc1e3839e1692f16bfce631946c882d4cc3b7cc59cdcb2f5285dd')
makedepends=('devkitARM')

groups=('nds-dev')

package() {
  mkdir -p "$pkgdir"/opt/devkitpro/examples/nds
  cp -R $srcdir/${pkgname}-${pkgname}-${pkgver}/* "$pkgdir"/opt/devkitpro/examples/nds
}


# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgname=('libnds')
pkgver=1.8.0
pkgrel=1
pkgdesc="Nintendo DS library."
arch=('any')
license=('zlib')
url="http://github.com/devkitpro/${pkgname}"
options=(!strip libtool staticlibs)
source=(${url}/archive/${pkgname}-${pkgver}.tar.gz)
sha256sums=('9b2af52aedd23fbbe05b917ad58f53c029551662df7733aa031b296a3f7285da')
depends=('devkitARM' 'devkitarm-rules' 'devkitarm-crtls')

groups=('nds-dev')

build() {

  make -C $srcdir/${pkgname}-${pkgname}-${pkgver}

}

package() {

  make -C  $srcdir/${pkgname}-${pkgname}-${pkgver} DESTDIR=$pkgdir install

}

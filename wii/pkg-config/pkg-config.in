#!/usr/bin/env bash

# reset pkg-config variables to ensure we're not polluted by host libraries

export PKG_CONFIG_DIR=
export PKG_CONFIG_PATH=
export PKG_CONFIG_SYSROOT_DIR=

export PKG_CONFIG_LIBDIR=/opt/devkitpro/portlibs/wii/lib/pkgconfig:/opt/devkitpro/portlibs/ppc/lib/pkgconfig

[[ "$1" == '--version' ]] && exec pkg-config --version
exec pkg-config --static "$@"


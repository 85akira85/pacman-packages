# Maintainer: Dave Murphy <davem@devkitpro.org>

pkgbasename=('maxmod')

if [ -z "$PLATFORM" ];then
  PLATFORM=nds
fi

if [ "$PLATFORM" = "gba" ]; then
  platdesc="Nintendo GBA"
  makedepends=('devkitARM')
  groups=('gba-dev')
elif [ "$PLATFORM" = "nds" ]; then
  platdesc="Nintendo NDS"
  makedepends=('devkitARM')
  groups=('nds-dev')
else
  echo "$PLATFORM unsupported"
  exit 1
fi

pkgname=("${pkgbasename}-${PLATFORM}")
pkgver=1.0.13
pkgrel=1
pkgdesc="${platdesc} Audio library."
arch=('any')
license=('custom')
url="http://github.com/devkitpro"
options=(!strip libtool staticlibs)
source=(${url}/${pkgbasename}/archive/${pkgbasename}-${pkgver}.tar.gz)
sha256sums=('283f79ede0feb5e8ee62da451074f790da1574f19a310b3d167ec45fbfaaa40b')

package() {

  make -C $srcdir/$pkgbasename-$pkgbasename-$pkgver DESTDIR=$pkgdir install-$PLATFORM

}
